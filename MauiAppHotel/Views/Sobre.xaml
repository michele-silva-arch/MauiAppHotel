<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
                NavigationPage.HasNavigationBar="False"
                BackgroundColor="{StaticResource SecondaryDarkText}">
    
    <VerticalStackLayout>
       <Label Text="Sobre o AppHotel - Net.Maui"
              FontFamily="CaveatVariableFontwght"
              FontSize="50"
              TextColor="{StaticResource  White}"
              HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Desenvolvedor(a): Michele Silva "
                TextColor="{StaticResource Secondary}"/>
            </HorizontalStackLayout>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Ano de Criação: 2025 " 
                       TextColor="{StaticResource Secondary}"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar."  
        HorizontalOptions="Center"
        Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>